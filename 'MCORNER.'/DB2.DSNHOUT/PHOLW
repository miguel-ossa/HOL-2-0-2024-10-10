           "//RUNPGM   EXEC PGM=IKJEFT01,DYNAMNBR=20,REGION=4096K    ".
           03  FILLER PIC X(80) VALUE
           "//STEPLIB  DD  DISP=SHR,DSN=DSN910.DB9G.SDSNEXIT         ".
           03  FILLER PIC X(80) VALUE
           "//         DD  DISP=SHR,DSN=DSN910.SDSNLOAD              ".
